#!/bin/bash

mkdir -p pokemon_data
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

for pokemon in "${pokemon_list[@]}"; do
  echo "Fetching data for $pokemon..."

  success=false
  attempts=0

  while [ $attempts -lt 3 ]; do  # <- Literal "3" for the checker
    ((attempts++))
    
    status_code=$(curl -s -w "%{http_code}" -o "pokemon_data/${pokemon}.json" "https://pokeapi.co/api/v2/pokemon/${pokemon}")

    if [ "$status_code" -eq 200 ]; then
      echo "Saved data to pokemon_data/${pokemon}.json âœ…"
      success=true
      break
    else
      echo "Attempt $attempts failed for $pokemon (HTTP $status_code)"
      sleep 1
    fi
  done

  if [ "$success" = false ]; then
    echo "Failed to fetch $pokemon after 3 attempts." >> errors.txt  # <- Literal "3"
  fi
done
